{% extends '::base.html.twig' %}

{% block body %}
    <nav class="navbar navbar-inverse" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!--
                <a class="navbar-brand" href="#">Project name</a>
                -->
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    {% if app.request.attributes.get('_route') == 'webtaxi_main_map_index' %}
                        <li class="active">
                    {% else %}
                    <li>
                    {% endif %}
                    <a href="{{ path('webtaxi_main_map_index') }}">Map</a>
                    </li>

                    {% if app.request.attributes.get('_route') == 'webtaxi_main_calltaxi_index' %}
                    <li class="active">
                    {% else %}
                    <li>
                        {% endif %}
                        <a href="{{ path('webtaxi_main_calltaxi_index') }}">Call taxi</a>
                    </li>


                    {% if app.request.attributes.get('_route') == 'webtaxi_main_findtraveller_index' %}
                    <li class="active">
                    {% else %}
                    <li>
                        {% endif %}
                        <a href="{{ path('webtaxi_main_findtraveller_index') }}">Find traveller</a>
                    </li>


                    {% if name is defined %}
                        {% if app.request.attributes.get('_route') == 'webtaxi_main_usersettings_index' %}
                            <li class="active">
                        {% else %}
                            <li>
                        {% endif %}
                            <a href="{{ path('webtaxi_main_usersettings_index') }}">You are connected as {{ name }}</a>
                        </li>
                    {% else %}
                        {% if app.request.attributes.get('_route') == 'webtaxi_main_login_index' %}
                            <li class="active">
                        {% else %}
                            <li>
                        {% endif %}
                            <a href="{{ path('webtaxi_main_login_index') }}">Login</a>
                        </li>
                    {% endif %}

                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        {% block content %}{% endblock %}
    </div>
{% endblock %}
