{% extends '::base.html.twig' %}

{% block body %}
    <nav class="navbar navbar-inverse" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                        aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!--
                <a class="navbar-brand" href="#">Project name</a>
                -->
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    {% if app.request.attributes.get('_route') == 'webtaxi_main_map_index' %}
                    <li class="active">
                {% else %}
                    <li>
                        {% endif %}
                        <a href="{{ path('webtaxi_main_map_index') }}">Map</a>
                    </li>

                    {% if app.request.attributes.get('_route') == 'webtaxi_main_calltaxi_index' %}
                    <li class="active">
                {% else %}
                    <li>
                        {% endif %}
                        <a href="{{ path('webtaxi_main_calltaxi_index') }}">Call taxi</a>
                    </li>


                    {% if app.request.attributes.get('_route') == 'webtaxi_main_findtraveller_index' %}
                    <li class="active">
                {% else %}
                    <li>
                        {% endif %}
                        <a href="{{ path('webtaxi_main_findtraveller_index') }}">Find traveller</a>
                    </li>

                </ul>


                <span class="navbar-text navbar-right">
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        {% if app.request.attributes.get('_route') == 'webtaxi_main_usersettings_index' %}
                            <span class="active">
                        {% else %}
                            <span>
                        {% endif %}
                        <a href="{{ path('webtaxi_main_usersettings_index') }}">{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}
                            {% endif %}</a>

                        <a href="{{ path('fos_user_security_logout') }}">{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                &nbsp; <img src="{{ asset('bundles/webtaximain/images/ic_logout.png') }}" />
                            {% endif %}</a>




                        </span>
                    {% else %}
                        {% if app.request.attributes.get('_route') == 'fos_user_security_login' %}
                            <span class="active">
                        {% else %}
                            <span>
                        {% endif %}
                        <a href="{{ path('fos_user_security_login') }}">Login</a>
                        </span>
                    {% endif %}


                </span>
            </div>

        </div>


    </nav>




    <div class="container">
        {% block content %}{% endblock %}
    </div>
{% endblock %}
